[Unit]
Description=Pizza Store Gunicorn daemon
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/pizza-store-backend/pizza_store
Environment="PATH=/var/www/pizza-store-backend/venv/bin"
ExecStart=/var/www/pizza-store-backend/venv/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/pizza-store.sock \
    --timeout 120 \
    pizza_store.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

